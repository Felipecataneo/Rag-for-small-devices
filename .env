# Configurações do Vector Database
VECTOR_DB_PATH=./vector_db
MODEL_NAME=all-MiniLM-L6-v2

# Configurações do servidor
PORT=8000
HOST=0.0.0.0
DEVELOPMENT=false

# Configurações de otimização para Raspberry Pi
MAX_MEMORY_MB=1024
BATCH_SIZE=32
GC_FREQUENCY=10
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Configurações de processamento
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_WORKERS=2

# Diretórios
MODEL_CACHE_DIR=./model_cache
UPLOAD_DIR=./uploads
LOGS_DIR=./logs

# Configurações de segurança (opcionais)
# API_KEY=your_secret_api_key_here
# ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=./logs/vector_api.log